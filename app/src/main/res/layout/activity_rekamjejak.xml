<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rekamjejak"
    android:background="@drawable/gambar2"
    android:orientation="vertical">

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/btnback"
      android:layout_width="69dp"
      android:layout_height="wrap_content"
      android:background="@null">
  </androidx.appcompat.widget.Toolbar>

  <RelativeLayout
      android:layout_width="385dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="15dp">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/nm">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Nama :"
          android:textColor="@color/white"/>

      <com.google.android.material.textview.MaterialTextView
          android:id="@+id/namawprj"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:hint=""
          android:textColorHint="@color/white"/>

    </com.google.android.material.appbar.MaterialToolbar>

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/nm"
        android:id="@+id/al">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Alamat :"
          android:textColor="@color/white"/>

      <com.google.android.material.textview.MaterialTextView
          android:id="@+id/alamatwprj"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:hint=""
          android:textColorHint="@color/white"/>

    </com.google.android.material.appbar.MaterialToolbar>

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/al">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Lokasi Objek Pajak :"
          android:textColor="@color/white"/>

      <com.google.android.material.textview.MaterialTextView
          android:id="@+id/lokasiop"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:hint=""
          android:textColorHint="@color/white"/>

    </com.google.android.material.appbar.MaterialToolbar>

    <TableLayout
        android:layout_marginTop="90dp"
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <TableRow
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:id="@+id/table_row1"
          android:padding="10dp">

        <TextView
            android:id="@+id/tahun"
            android:fontFamily="serif"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="#000"
            android:text="Tahun"/>

        <TextView
            android:id="@+id/PBB"
            android:textColor="#000"
            android:fontFamily="serif"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="PBB Pokok"/>

        <TextView
            android:textColor="#000"
            android:id="@+id/denda"
            android:fontFamily="serif"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Denda"/>
        <TextView
            android:textColor="#000"
            android:id="@+id/status"
            android:fontFamily="serif"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Status"/>

      </TableRow>
      <View
          android:layout_marginLeft="10dp"
          android:layout_height="3dip"
          android:layout_width="match_parent"
          android:background="#fff"/>
    </TableLayout>
  </RelativeLayout>

</LinearLayout>