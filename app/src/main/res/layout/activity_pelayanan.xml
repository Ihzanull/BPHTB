<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pelayanan"
    android:background="@drawable/gambar2"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/btnback"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:background="@null">
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_gravity="center"
        android:shadowColor="@color/abuabu"
        android:shadowDx="5"
        android:shadowDy="1"
        android:shadowRadius="6"
        android:text="PELAYANAN"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        android:fontFamily="@font/chakrapetch" />

    <Button
        android:id="@+id/tunggakan"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@drawable/btn_color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Cek Tunggakan"
        android:textSize="19sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/permohonan"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_color"
        android:text="Permohonan Baru"
        android:textSize="19dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/pembayaran"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_color"
        android:text="Pembayaran"
        android:textSize="19sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:layout_gravity="center"/>


</LinearLayout>