        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/jenishak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/layoutbgn"
            android:text="Jenis Perolehan Hak"
            android:textColor="@color/black"/>

        <Spinner
            android:id="@+id/perolehanhak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="158dp"
            android:layout_toRightOf="@id/jenishak"
            android:entries="@array/perhak"
            />

        <TextView
            android:id="@+id/jenisserti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/jenishak"
            android:text="Jenis Surat Tanah"
            android:textColor="@color/black"/>

        <Spinner
            android:id="@+id/sertifikat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="197dp"
            android:layout_toRightOf="@id/jenishak"
            android:entries="@array/serti"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/jenisserti"
            android:hint="Nomor Sertifikat / Surat Tanah">

            <EditText
                android:id="@+id/noserti"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:textColorHint="@color/black"/>
        </com.google.android.material.textfield.TextInputLayout>
