    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Selected FIle"
        android:textColor="@color/black">
    </com.google.android.material.textview.MaterialTextView>

